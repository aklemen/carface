<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

    <RadioGroup
        android:id="@+id/settings_group_settings"
        android:layout_width="wrap_content"
        android:layout_height="140px"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:orientation="horizontal"
        android:checkedButton="@id/settings_button_drive">

        <com.example.carface.MyLogRadioButton
            android:id="@+id/settings_button_drive"
            android:layout_width="226px"
            android:layout_height="100px"
            android:background="@drawable/button_radio_drive"
            android:button="@null"/>

        <com.example.carface.MyLogRadioButton
            android:id="@+id/settings_button_sound"
            android:layout_width="226px"
            android:layout_height="100px"
            android:layout_marginStart="35px"
            android:layout_marginEnd="35px"
            android:background="@drawable/button_radio_sound"
            android:button="@null"/>

        <com.example.carface.MyLogRadioButton
            android:id="@+id/settings_button_screen"
            android:layout_width="226px"
            android:layout_height="100px"
            android:background="@drawable/button_radio_screen"
            android:button="@null"/>

    </RadioGroup>

    <FrameLayout
        android:id="@+id/settings_placeholder"
        android:layout_width="match_parent"
        android:layout_height="620px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20px"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:id="@+id/settings_relative_slideFrom"
        android:layout_marginTop="210px"
        android:layout_width="50px"
        android:layout_height="390px"
        android:background="@drawable/list_bg_settings"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:id="@+id/settings_relative_slideView"
        android:layout_marginTop="210px"
        android:layout_width="310px"
        android:layout_height="390px"
        android:background="@drawable/list_bg_settings"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="true">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/settings_text_ip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Server IP"
            android:layout_marginStart="35px"
            android:layout_marginTop="35px"
            android:textSize="24px"
            android:fontFamily="@font/montserrat_semibold"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/settings_edit_ip"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:layout_marginStart="35px"
            android:layout_below="@+id/settings_text_ip"
            android:hint="eg. 192.168.0.10:80"
            android:textSize="24px"
            android:textColor="@color/white"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:background="@drawable/rectangle_search"
            android:padding="10px"
            android:textAlignment="center"
            android:maxLines="1"
            android:inputType="text"
            android:imeOptions="actionDone"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/settings_button_saveIP"
            android:layout_width="250px"
            android:layout_height="50px"
            android:background="@drawable/button_grey_50"
            android:layout_below="@id/settings_edit_ip"
            android:layout_marginStart="35px"
            android:layout_marginTop="15px"
            android:text="Save and connect"
            android:textAllCaps="false"
            android:textColor="@color/black_1" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/settings_text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current task"
            android:layout_below="@id/settings_button_saveIP"
            android:layout_marginStart="35px"
            android:layout_marginTop="45px"
            android:textSize="24px"
            android:fontFamily="@font/montserrat_semibold"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/settings_button_cancelTask"
            android:layout_width="250px"
            android:layout_height="50px"
            android:background="@drawable/button_grey_50"
            android:text="Cancel task"
            android:textAllCaps="false"
            android:textColor="@color/black_1"
            android:layout_below="@id/settings_text_cancel"
            android:layout_marginStart="35px"
            android:layout_marginTop="20px"/>

    </RelativeLayout>




</RelativeLayout>
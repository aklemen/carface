<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="35px"
       android:id="@+id/soundsettings_text_eq">

       <android.support.v7.widget.AppCompatTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/bass"
           android:textColor="@color/black_1"
           android:layout_alignParentStart="true"
           android:layout_marginStart="210px"
           android:textSize="30px"/>

       <android.support.v7.widget.AppCompatTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/mid"
           android:textColor="@color/black_1"
           android:layout_centerHorizontal="true"
           android:textSize="30px"/>

       <android.support.v7.widget.AppCompatTextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/treble"
           android:textColor="@color/black_1"
           android:layout_alignParentEnd="true"
           android:layout_marginEnd="190px"
           android:textSize="30px"/>

   </RelativeLayout>



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35px"
        android:layout_below="@id/soundsettings_text_eq">

        <FrameLayout
            android:layout_width="60px"
            android:layout_height="380px"
            android:orientation="vertical"
            android:background="@drawable/ic_lines">

            <SeekBar
                android:id="@+id/soundsettings_seekbar_0"
                android:layout_width="380px"
                android:layout_height="60px"
                android:thumb="@drawable/thumb_big"
                android:progressDrawable="@drawable/seekbar_style"
                android:paddingStart="0px"
                android:paddingEnd="0px"
                android:thumbOffset="0px"
                android:layout_gravity="center"
                android:rotation="270" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="60px"
            android:layout_height="380px"
            android:orientation="vertical"
            android:layout_marginStart="80px"
            android:background="@drawable/ic_lines">

            <SeekBar
                android:id="@+id/soundsettings_seekbar_1"
                android:layout_width="380px"
                android:layout_height="60px"
                android:thumb="@drawable/thumb_big"
                android:progressDrawable="@drawable/seekbar_style"
                android:paddingStart="0px"
                android:paddingEnd="0px"
                android:thumbOffset="0px"
                android:layout_gravity="center"
                android:rotation="270" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="60px"
            android:layout_height="380px"
            android:orientation="vertical"
            android:layout_marginStart="80px"
            android:background="@drawable/ic_lines">

            <SeekBar
                android:id="@+id/soundsettings_seekbar_2"
                android:layout_width="380px"
                android:layout_height="60px"
                android:thumb="@drawable/thumb_big"
                android:progressDrawable="@drawable/seekbar_style"
                android:paddingStart="0px"
                android:paddingEnd="0px"
                android:thumbOffset="0px"
                android:layout_gravity="center"
                android:rotation="270" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="60px"
            android:layout_height="380px"
            android:orientation="vertical"
            android:layout_marginStart="80px"
            android:background="@drawable/ic_lines">

            <SeekBar
                android:id="@+id/soundsettings_seekbar_3"
                android:layout_width="380px"
                android:layout_height="60px"
                android:thumb="@drawable/thumb_big"
                android:progressDrawable="@drawable/seekbar_style"
                android:paddingStart="0px"
                android:paddingEnd="0px"
                android:thumbOffset="0px"
                android:layout_gravity="center"
                android:rotation="270" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="60px"
            android:layout_height="380px"
            android:orientation="vertical"
            android:layout_marginStart="80px"
            android:background="@drawable/ic_lines">

            <SeekBar
                android:id="@+id/soundsettings_seekbar_4"
                android:layout_width="380px"
                android:layout_height="60px"
                android:thumb="@drawable/thumb_big"
                android:progressDrawable="@drawable/seekbar_style"
                android:paddingStart="0px"
                android:paddingEnd="0px"
                android:thumbOffset="0px"
                android:layout_gravity="center"
                android:rotation="270" />

        </FrameLayout>

    </LinearLayout>

    <RadioGroup
        android:id="@+id/soundsettings_group_presets"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:checkedButton="@id/soundsettings_button_preset1">

        <com.example.carface.MyLogRadioButton
            android:id="@+id/soundsettings_button_preset1"
            android:layout_width="210px"
            android:layout_height="78px"
            android:layout_marginEnd="35px"
            android:textSize="30px"
            android:textAllCaps="false"
            android:background="@drawable/radiobutton_50_green"
            android:button="@null"
            android:textColor="@color/button_color"
            android:textAlignment="center"/>

        <com.example.carface.MyLogRadioButton
            android:id="@+id/soundsettings_button_preset2"
            android:layout_width="210px"
            android:layout_height="78px"
            android:layout_marginEnd="35px"
            android:textSize="30px"
            android:textAllCaps="false"
            android:background="@drawable/radiobutton_50_green"
            android:button="@null"
            android:textColor="@color/button_color"
            android:textAlignment="center"/>

        <com.example.carface.MyLogRadioButton
            android:id="@+id/soundsettings_button_preset3"
            android:layout_width="210px"
            android:layout_height="78px"
            android:layout_marginEnd="35px"
            android:textSize="30px"
            android:textAllCaps="false"
            android:background="@drawable/radiobutton_50_green"
            android:button="@null"
            android:textColor="@color/button_color"
            android:textAlignment="center"/>


        <com.example.carface.MyLogRadioButton
            android:id="@+id/soundsettings_button_preset4"
            android:layout_width="210px"
            android:layout_height="78px"
            android:textSize="30px"
            android:textAllCaps="false"
            android:background="@drawable/radiobutton_50_green"
            android:button="@null"
            android:textColor="@color/button_color"
            android:textAlignment="center"/>

    </RadioGroup>



</RelativeLayout>
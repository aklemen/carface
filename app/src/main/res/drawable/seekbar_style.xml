<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background" android:gravity="center">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/grey_1"/>
            <size android:height="10px"/>
            <corners android:radius="50px"/>
        </shape>
    </item>

    <item android:id="@android:id/progress" android:gravity="center">
        <clip>
            <shape
                android:shape="rectangle">
                <solid android:color="@color/black_1"/>
                <size android:height="10px"/>
                <corners android:radius="50px"/>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/secondaryProgress" android:gravity="center">
        <clip>
            <shape
                android:shape="rectangle">
                <solid android:color="@color/black_1"/>
                <size android:height="10px"/>
                <corners android:radius="50px"/>
            </shape>
        </clip>
    </item>
</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item android:drawable="@drawable/button_red_round" />
            <item
                android:drawable="@drawable/ic_leftseat_white"
                android:width="48px" android:height="63px"
                android:gravity="center_vertical|center_horizontal" />
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item android:drawable="@drawable/button_black_round" />
            <item
                android:drawable="@drawable/ic_leftseat_white"
                android:width="48px" android:height="63px"
                android:gravity="center_vertical|center_horizontal" />
        </layer-list>
    </item>

</selector>